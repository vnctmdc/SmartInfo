        "NSLocationWhenInUseUsageDescription": "GENERIC LOCATION MESSAGE",
        "NSFaceIDUsageDescription": "This app will optionally use Face ID or Touch ID to save login."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyBLceFu9fgncT-AOiopiNDD0IKnFPguCms"
      }
    },
    "android": {
      "package": "softmart.smartinfo",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_INTERNAL_STORAGE",
        "WRITE_INTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "com.google.android.c2dm.permission.RECEIVE",
        "VIBRATE",
        "WAKE_LOCK",
        "com.google.android.providers.gsf.permission.READ_GSERVICES",
        "android.permission.INTERNET"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "extra": {
      "APP_VERSION": "1.0.0.6",
      "API_HOST_DEV": "http://192.168.0.118/SM.SmartInfo",
