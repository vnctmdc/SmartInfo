{
  "expo": {
    "name": "SmartInfo",
    "slug": "smart-info",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo_big.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
